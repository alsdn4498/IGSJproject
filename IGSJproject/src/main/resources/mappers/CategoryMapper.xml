<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ezen.project.IGSJ.Category.CategoryMapper">

<!-- 	<select id="getCategory" resultType="ezen.project.IGSJ.Category.dto.CategoryDTO">
					SELECT category_name, cno
					from CategoryDTO;
	</select> -->
	<select id="getCategory" resultType="ezen.project.IGSJ.Category.dto.CategoryDTO">
			select cno, category_name, category_level
			from CategoryDTO where category_level is null
	</select> 
	
	<select id="getCategory2" resultType="ezen.project.IGSJ.Category.dto.CategoryDTO">
			select cno, category_name, category_level
			from CategoryDTO
			where category_level = #{cno}
	</select> 


</mapper>